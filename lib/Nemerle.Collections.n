    public Iter2[TFirst, TSecond](this a : list[TFirst], b : array[TSecond], f : TFirst  * TSecond -> void) : void
    {
      def loop (l, acc) : void
      {
        match (l)
        {
          | [] => ()
          | x :: xs => f (x, b[acc]); loop (xs, acc + 1)
        }
      }

      loop (a, 0)
    }

