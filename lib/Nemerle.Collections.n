    /// Folds a function over an array.
    public Fold[TAccumulator, T](this arr : array[T], ini : TAccumulator, f : T * TAccumulator -> TAccumulator) : TAccumulator
    {
      def loop (acc, i)
      {
        if (i >= arr.Length) acc
        else loop (f (arr[i], acc), i + 1)
      }

      loop (ini, 0)
    }


