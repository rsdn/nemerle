using System;

module Program
{

  Main() : void
  {
    def x = int.MaxValue - 10;

    // overflow checking enabled by default
    try {
      def y = x + 100;
      ignore(y);
      Console.WriteLine("FAIL");
    } catch {
      | _ is OverflowException =>
        Console.WriteLine("OK");
    }

    try {
      def y = x :> short;
      ignore(y);
      Console.WriteLine("FAIL");
    } catch {
      | _ is OverflowException =>
        Console.WriteLine("OK");
    }

    unchecked {
        try {
          def y = x + 100;
          ignore(y);
          Console.WriteLine("OK");
        } catch {
          | _ is OverflowException =>
            Console.WriteLine("FAIL");
        }
    
        try {
          def y = x :> short;
          ignore(y);
          Console.WriteLine("OK");
        } catch {
          | _ is OverflowException =>
            Console.WriteLine("FAIL");
        }
    }

    unchecked {
        checked {

            try {
              def y = x :> short;
              ignore(y);
              Console.WriteLine("FAIL");
            } catch {
              | _ is OverflowException =>
                Console.WriteLine("OK");
            }

        }
    }

  }
}
