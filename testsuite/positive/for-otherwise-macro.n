using System;
using System.Console;
using System.Collections.Generic;

module Program
{
  Main() : void
  {
    for (mutable i = 0; i > 10; ++i)
      if (i == 0)
        WriteLine(i);
      else
        WriteLine(i + 1);
    otherwise
      WriteLine("Otherwise1");
      
    for (mutable i = 0; i > 10; ++i)
      if (i == 0)
        WriteLine(i);
      else
        WriteLine(i + 1);      
    
    for (mutable j = 2; j < 3; ++j)
      for (; j < 1; ++j ) {}
      otherwise
        WriteLine("Otherwise{0}", j);
    otherwise
      WriteLine("Other3");
      
    // Complex cases
    if (1 == 2)
    {
      unless (false)
        for (mutable k = 0; k > 10; ++k)
          unless (false)
            WriteLine("Other3");
    }
    else
      for (mutable k = 0; k > 10; ++k)
        WriteLine("Other4");
      otherwise
        WriteLine("Otherwise3");

    if (1 == 2)
      for (mutable i = 1; i < 0; ++i)
        WriteLine(i);
    else
      for (mutable i = 2; i < 0; ++i)
        WriteLine(i);
      otherwise
        WriteLine("Otherwise4");
  }
}

