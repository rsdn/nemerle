    CreateEvents(count : int) : void
    {
      def loop(count, lst : list[int])
      {
        if (count == 0) lst else
        {
          def idx = rand.Next(4);
          loop(count-1, idx :: lst)
        }
      }
       
      events = loop(count, []);
    }
    
