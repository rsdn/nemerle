using Nemerle.Compiler;
using Nemerle.Utility;
using Nemerle.Assertions;
using Nemerle.Compiler.Parsetree;
using Nemerle.Compiler.Typedtree;

namespace Nemerle.Compiler.Sre
{
  public sealed class SreTParameter : TParameter
  {
    public this(
      loc           : Location,
      name          : string,
      nameLocation  : Location,
      color         : int,
      ty            : TypeVar,
      typeLocation  : Location,
      modifiers     : Modifiers,
      kind          : ParmKind,
      patternHack   : PExpr)
    {
      base(loc, name, nameLocation, color, ty, typeLocation, modifiers, kind, patternHack)
    }

    public mutable builder : System.Reflection.Emit.ParameterBuilder;

    public GetSystemType() : System.Type
    {
      ty.Fix ().GetSystemType ();
    }
  }
}