            //  // So, we return true, but issue an error. It looks like the suitable decision here (FIXME).
            //  ReportLocatedError(expr.Location, messenger, $"$expr is not a valid type. Tuple cannot have void elements.");
            //  //Message.Error(expr.Location, messenger, $"$expr is not a valid type. Tuple cannot have void elements.");
            //  true
            //}
            //else true
            true
          }
          else false

        | _ => false
      }
