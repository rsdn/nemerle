    #region Static caches -- operators and conversions
    static binary_operators : Hashtable[string, string] = Hashtable();
    static unary_operators  : Hashtable[string, string] = Hashtable();

    static _binary_names : Hashtable[string, string] = Hashtable();
    static _unary_names  : Hashtable[string, string] = Hashtable();

    static public IsBinaryOperatorName(name : string) : bool { _binary_names.Contains(name) }
    static public IsUnaryOperatorName(name  : string) : bool { _unary_names.Contains(name) }

    static public GetBinaryOperatorSymbolOrDefault(name : string) : string
    {
      _binary_names.GetValueOrDefault(name, name)
    }

    static public GetUnaryOperatorSymbolOrDefault(name : string) : string
    {
      _unary_names.GetValueOrDefault(name, name)
    }

    // a cache

    static this ()
    {
      def binaries = array[
        ("+", "op_Addition"),
        ("&", "op_BitwiseAnd"),
        ("%&", "op_BitwiseAnd"),
        ("|", "op_BitwiseOr"),
        ("%|", "op_BitwiseOr"),
        ("/", "op_Division"),
        ("==", "op_Equality"),
        ("^", "op_ExclusiveOr"),
        ("%^", "op_ExclusiveOr"),
        (">", "op_GreaterThan"),
        (">=", "op_GreaterThanOrEqual"),
        ("!=", "op_Inequality"),
        ("<<", "op_LeftShift"),
        ("<", "op_LessThan"),
        ("<=", "op_LessThanOrEqual"),
        ("%", "op_Modulus"),
        ("*", "op_Multiply"),
        (">>", "op_RightShift"),
        ("-", "op_Subtraction")
      ];

      def unaries = array[
      /*
        ("--", "op_Decrement"),
        ("++", "op_Increment"),
       */
        ("!", "op_LogicalNot"),
        ("~", "op_OnesComplement"),
        ("-", "op_UnaryNegation"),
        ("+", "op_UnaryPlus")
      ];

      foreach ((syb, name) in binaries)
      {
        binary_operators.Add(syb, name);

        unless (_binary_names.Contains(name))
          _binary_names.Add(name, syb);
      }

      foreach ((syb, name) in unaries)
      {
        unary_operators.Add(syb, name);

        unless (_unary_names.Contains(name))
          _unary_names.Add(name, syb);
      }
    }

    static IsOperator (name : string) : bool
    {
      name != "" && LexerBase.IsOperatorChar (name [0])
    }
