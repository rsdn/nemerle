using System.Console;
using Nemerle.Text;

module Progam {

    Main() : void {
        def get_language(paths) {
            mutable result;
            foreach (path in paths) {
                result =
                    regexp match (path.ToLower()) {
                        | @"file-(?<language>..)\.txt" => language
                        | _ => "none"
                    }
            }
            result
        }
        WriteLine(get_language([ "file-fr.txt" ]))
    }

}
