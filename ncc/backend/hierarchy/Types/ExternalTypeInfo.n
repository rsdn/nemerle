    public override SuperClass() : option[TypeInfo]
    {
      //assert2(!IsInterface);
      
      def candidates = direct_supertypes.Filter(supertype => !supertype.TypeInfo.IsInterface);
      
      match (candidates)
      {
        | FixedType.Class(tc, _) :: _ => Some(tc)
        | [] => None()
        | _ => Util.ice()
      }
    }

