    public ClassOrValueTypeSig : DN.ClassOrValueTypeSig
    {
      mutable _classOrValueTypeSig : DN.ClassOrValueTypeSig;
      get
      {
        when (_classOrValueTypeSig == null)
        {
          def moduleBuilder    = Manager.Hierarchy._module_builder;
          def declaringType    = DeclaringType;
          def resolutionScope : DN.IResolutionScope =
            if (declaringType != null)
              declaringType.GetClassOrValueTypeSig().TypeDefOrRef :> DN.IResolutionScope
            else if (DN.UTF8String.CaseInsensitiveEquals(system_type.DefinitionAssembly.Name, moduleBuilder.Assembly.Name))
              library.ModuleRef
            else
              library.AssemblyRef;
          def typeRef          = DN.TypeRefUser(moduleBuilder, system_type.Namespace, system_type.Name, resolutionScope);
          _classOrValueTypeSig = if (system_type.IsValueType) DN.ValueTypeSig(typeRef) else DN.ClassSig(typeRef);
        }
        _classOrValueTypeSig
      }
    }
